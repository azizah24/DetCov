<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginRight="24dp"
    app:cardBackgroundColor="#FFFF"
    app:contentPadding="20dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negara"
            android:textSize="18sp"
            android:fontFamily="@font/acme"
            android:textColor="#000"
            android:id="@+id/negara"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/negara">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Total Kasus Positif"
                android:textColor="#000"
                android:fontFamily="@font/molengo"
                android:textSize="14sp"/>

                <TextView
                    android:id="@+id/totalpositif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:paddingStart="15dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"
                    android:paddingLeft="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kasus Positif Hari Ini"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:id="@+id/positifhariini"
                    android:paddingStart="15dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"
                    android:paddingLeft="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/molengo"
                    android:text="Total Kasus Kematian"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:id="@+id/totalmati"
                    android:paddingStart="15dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"
                    android:paddingLeft="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kasus Kematian Hari Ini"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:paddingStart="15dp"
                    android:layout_weight="1"
                    android:id="@+id/matihariini"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"
                    android:paddingLeft="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Kasus Sembuh"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:paddingStart="15dp"
                    android:layout_weight="1"
                    android:id="@+id/totalsembuh"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"
                    android:paddingLeft="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kasus Sembuh Hari Ini"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:paddingStart="15dp"
                    android:layout_weight="1"
                    android:id="@+id/sembuhhariini"
                    android:textColor="#000"
                    android:fontFamily="@font/molengo"
                    android:textSize="14sp"
                    android:paddingLeft="15dp" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>